// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
//
{
  // Settings related to preview tabs.
  "outline_panel": {
    "dock": "right"
  },
  "preview_tabs": {
    // Whether preview tabs should be enabled.
    // Preview tabs allow you to open files in preview mode, where they close automatically
    // when you switch to another file unless you explicitly pin them.
    // This is useful for quickly viewing files without cluttering your workspace.
    "enabled": false,
    // Whether to open tabs in preview mode when selected from the file finder.
    "enable_preview_from_file_finder": false,
    // Whether a preview tab gets replaced when code navigation is used to navigate away from the tab.
    "enable_preview_from_code_navigation": false
  },
  // File scan exclusions, hide on the file explorer and search
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/node_modules"
  ],
  // Disable Collab Panel, Assistant Panel, Chat Panel, Notification
  "features": {
    "copilot": false,
    "inline_completion_provider": "none"
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "assistant": {
    "enabled": false,
    "version": "2",
    "button": false
  },
  "assistant_v2": {
    "enabled": false
  },
  "notification_panel": {
    "button": false
  },
  // Use relative line numbers
  "relative_line_numbers": true,
  "tab_bar": {
    "show": true
  },
  // Indentation, rainbow indentation
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  // Use zed commit editor
  "terminal": {
    // "dock": "left",
    "shell": {
      "program": "nu"
    },
    // "shell": "system",
    // "dock": "Center",
    "env": {
      "EDITOR": "zeditor --wait",
      "LANG": "en_GB.utf8",
      "LC_ALL": "en_GB.utf8"
    }
  },
  // To autosave when focus changes
  "autosave": "on_focus_change",
  // Base key bindings scheme
  "base_keymap": "JetBrains",
  // Always show the scrollbar
  "scrollbar": {
    "show": "always"
  },

  // Default dock position for Project Panel to right
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  // Turn off telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // The default font size for text in the UI
  "ui_font_size": 20,
  // The default font size for text in the editor
  "buffer_font_size": 20,
  //
  "theme": {
    "mode": "system",
    "light": "Ayu Mirage",
    "dark": "One Dark"
  }
}
