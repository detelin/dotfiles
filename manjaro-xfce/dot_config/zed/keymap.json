// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      "ctrl-1": "workspace::ToggleRightDock",
      "ctrl-r": "search::ToggleReplace"
    }
  },
  {
    //Key Bindings for Upper-Case and Lower-Case Text Transformations
    "context": "Editor",
    "bindings": {
      "shift-ctrl-u": "editor::ConvertToUpperCase",
      "shift-ctrl-l": "editor::ConvertToLowerCase"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-t": "workspace::NewCenterTerminal"
    }
  },
  {
    "context": "Teminal",
    "bindings": {
      "ctrl-w": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      "space g g": [
        "workspace::SendKeystrokes",
        ": new center terminal enter lazygit enter"
      ]
    }
  }
]
